# Application host and port (not normally required in docker)
HOST=0.0.0.0
PORT=1337

# Database configuration
DATABASE_CLIENT=postgres
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=your_db_name
DATABASE_USERNAME=your_db_user
DATABASE_PASSWORD=your_db_password
DATABASE_SSL=false

# Strapi secrets (generate using the command below or similar)
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
APP_KEYS=replace-with-multiple-comma-separated-keys
API_TOKEN_SALT=
ADMIN_JWT_SECRET=
JWT_SECRET=
TRANSFER_TOKEN_SALT=

# Optional encryption key for sensitive data
ENCRYPTION_KEY=

# Seed controls (set to true only for one deployment, then set back to false)
RUN_SEED=false

# Cloudinary credentials (if using media uploads/cloudinary plugin)
CLOUDINARY_NAME=
CLOUDINARY_KEY=
CLOUDINARY_SECRET=
